{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@docs/*": ["docs/*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@common/*": ["common/*"],
      "@utils/*": ["utils/*"],
      "@interfaces/*": ["interfaces/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
} 