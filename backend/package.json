{
  "name": "smarthive-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && pnpm copy:docs && pnpm sentry:sourcemaps",
    "copy:docs": "cp -r src/docs/*.yaml dist/docs/",
    "start": "node -r module-alias/register dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register src/server.ts",
    "lint": "eslint src --ext .ts",
    "swagger:validate": "swagger-cli validate src/docs/openapi.bundled.yaml",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org cipher-corp --project smart-hive ./dist && sentry-cli sourcemaps upload --org cipher-corp --project smart-hive ./dist"
  },
  "keywords": [],
  "author": "cipher_101",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@clerk/backend": "^2.5.0",
    "@clerk/express": "^1.7.9",
    "@sentry/cli": "^2.47.1",
    "@sentry/node": "^9.39.0",
    "@sentry/profiling-node": "^9.39.0",
    "@types/express": "^5.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "module-alias": "^2.2.3",
    "mongoose": "^8.16.4",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.5",
    "qs": "^6.14.0",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "yamljs": "^0.3.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.14",
    "@types/nodemailer": "^6.4.17",
    "@types/qs": "^6.14.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "eslint": "^9.31.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "swagger-cli": "^4.0.4",
    "swagger-combine": "^1.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "_moduleAliases": {
    "@": "dist",
    "@config": "dist/config",
    "@docs": "dist/docs",
    "@modules": "dist/modules",
    "@common": "dist/common",
    "@utils": "dist/utils",
    "@interfaces": "dist/interfaces"
  }
}